<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvItemName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="6dp"
        android:paddingTop="6dp"
        android:textColor="@color/colorTextBlue"
        android:textSize="@dimen/text_size_large" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="6dp">

        <LinearLayout style="@style/VanStockAdapterLayout">

            <TextView
                style="@style/VanStockAdapterTitle"
                android:text="Load Qty" />

            <TextView
                style="@style/VanStockAdapterTitle"
                android:text="Gross Sale" />

            <TextView
                style="@style/VanStockAdapterTitle"
                android:text="Sample" />

            <TextView
                style="@style/VanStockAdapterTitle"
                android:text="Market Rejection" />

            <TextView
                style="@style/VanStockAdapterTitle"
                android:text="Fresh Rejection" />

            <TextView
                style="@style/VanStockAdapterTitle"
                android:layout_marginRight="0dp"
                android:text="Lefover" />

        </LinearLayout>

        <LinearLayout style="@style/VanStockAdapterLayout">

            <TextView
                android:id="@+id/tvLoadQty"
                style="@style/VanStockAdapterDesc" />

            <TextView
                android:id="@+id/tvGrossSale"
                style="@style/VanStockAdapterDesc" />

            <TextView
                android:id="@+id/tvSample"
                style="@style/VanStockAdapterDesc" />

            <TextView
                android:id="@+id/tvMarketRejection"
                style="@style/VanStockAdapterDesc" />

            <TextView
                android:id="@+id/tvFreshRejection"
                style="@style/VanStockAdapterDesc" />

            <TextView
                android:id="@+id/tvLeftover"
                style="@style/VanStockAdapterDesc"
                android:layout_marginRight="0dp" />
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorBackgroundBlack" />
</LinearLayout>
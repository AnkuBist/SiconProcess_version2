<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hgil.siconprocess.activity.fragments.finalPayment.CrateCheckFragment">

    <!--layout van crate stock check-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/colorTextGrey"
            android:elevation="5dp"
            android:gravity="center"
            android:text="Crate Stock"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_size_large" />

        <RelativeLayout style="@style/finalPaymentItemHolder">

            <TextView
                style="@style/FinalTvLabel"
                android:layout_toLeftOf="@+id/etCrateLoaded"
                android:text="Crates Loaded" />

            <EditText
                android:id="@+id/etCrateLoaded"
                style="@style/RejectionEtStyle"
                android:background="@drawable/et_uneditable_round_shape"
                android:editable="false"
                android:enabled="false" />
        </RelativeLayout>

        <RelativeLayout style="@style/finalPaymentItemHolder">

            <TextView
                style="@style/FinalTvLabel"
                android:layout_toLeftOf="@+id/etCrateReceived"
                android:text="Crates received by Supervisor" />

            <EditText
                android:id="@+id/etCrateReceived"
                style="@style/RejectionEtStyle" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="@color/colorBackgroundBlack" />

    </LinearLayout>

</FrameLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvRouteName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical"
            android:paddingBottom="7dp"
            android:paddingLeft="8dp"
            android:paddingTop="10dp"
            android:textColor="@color/colorRLTextBlue"
            android:textSize="@dimen/text_size_medium" />

        <TextView
            android:id="@+id/tvRouteStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tvRouteName"
            android:gravity="right|top"
            android:paddingLeft="3dp"
            android:text="*"
            android:textColor="@color/colorHotPink"
            android:textSize="@dimen/text_size_extra_large"
            android:textStyle="bold" />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="6dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp">

        <TextView
            android:id="@+id/tvItemInfo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.4"
            android:gravity="left"
            android:singleLine="true"
            android:textColor="@color/colorTextBlack"
            android:textSize="@dimen/text_size_small" />

        <TextView
            android:id="@+id/tvSaleInfo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:singleLine="true"
            android:textColor="@color/colorTextBlack"
            android:textSize="@dimen/text_size_small" />

        <TextView
            android:id="@+id/tvRejPrct"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:gravity="right"
            android:singleLine="true"
            android:textColor="@color/colorTextBlack"
            android:textSize="@dimen/text_size_small" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorBackgroundBlack" />
</LinearLayout>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hgil.siconprocess.activity.fragments.invoice.CratesManagementFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvCustomerName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorBackgroundBlack"
            android:elevation="5dp"
            android:gravity="center"
            android:text="Title"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text_size_extra_large" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorTextGrey">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:alpha="0.88"
                android:background="@color/cardview_light_background"
                android:orientation="vertical">

                <RelativeLayout style="@style/rejectionItemHolder">

                    <TextView
                        style="@style/RejectionTvLabel"
                        android:text="Opening Crates" />

                    <EditText
                        android:id="@+id/etOpeningCrates"
                        style="@style/RejectionEtStyle"
                        android:background="@drawable/et_uneditable_round_shape" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/colorBackgroundBlack" />

                <RelativeLayout style="@style/rejectionItemHolder">

                    <TextView
                        style="@style/RejectionTvLabel"
                        android:text="Issued Crates" />

                    <EditText
                        android:id="@+id/etIssuedCrates"
                        style="@style/RejectionEtStyle" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/colorBackgroundBlack" />

                <RelativeLayout style="@style/rejectionItemHolder">

                    <TextView
                        style="@style/RejectionTvLabel"
                        android:text="Received Crates" />

                    <EditText
                        android:id="@+id/etReceivedCrates"
                        style="@style/RejectionEtStyle" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/colorBackgroundBlack" />

                <RelativeLayout style="@style/rejectionItemHolder">

                    <TextView
                        style="@style/RejectionTvLabel"
                        android:text="Balance Crates" />

                    <EditText
                        android:id="@+id/etBalanceCrates"
                        style="@style/RejectionEtStyle"
                        android:background="@drawable/et_uneditable_round_shape" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/colorBackgroundBlack" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</FrameLayout>

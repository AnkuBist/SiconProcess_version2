<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.fragments.routeLevel.skuSaleDetail.SkuSaleDetailFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvRouteName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorBackgroundBlack"
            android:elevation="5dp"
            android:gravity="center"
            android:text="Title"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text_size_extra_large" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:background="@color/colorWhite"
                android:elevation="5dp"
                android:gravity="left|center_vertical"
                android:paddingLeft="10dp"
                android:text="Productive Calls"
                android:textColor="@color/colorTextBlack"
                android:textSize="@dimen/text_size_medium" />

            <TextView
                android:id="@+id/tvProductiveCalls"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:background="@color/colorWhite"
                android:elevation="5dp"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/colorTextBlack"
                android:textSize="@dimen/text_size_medium" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/colorBackgroundBlack"
            android:elevation="1dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="5dp"
            android:minHeight="50dp"
            android:orientation="horizontal">
            <!--android:weightSum="4"-->

            <!--template of items in this list-->
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.3"
                android:gravity="left|center_vertical"
                android:paddingLeft="5dp"
                android:text="Item Name"
                android:textColor="@color/colorTextBlack"
                android:textSize="@dimen/text_size_medium"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:gravity="center_vertical|center_horizontal"
                android:text="LeftOver"
                android:textColor="@color/colorTextBlack"
                android:textSize="@dimen/text_size_medium"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:gravity="center_vertical|center_horizontal"
                android:text="Outlet Bought/Total"
                android:textColor="@color/colorTextBlack"
                android:textSize="@dimen/text_size_medium"
                android:textStyle="bold" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/colorBackgroundBlack"
            android:elevation="0.5dp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvItemSaleVariance"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none" />

        <TextView
            android:id="@+id/tvEmpty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:text="No Item(s) found"
            android:textColor="@color/colorTextBlack"
            android:textSize="@dimen/text_size_large"
            android:visibility="gone" />

    </LinearLayout>

</FrameLayout>